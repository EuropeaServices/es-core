{% trans_default_domain 'EsCoreBundle' %}
{% extends ('@EsCore/layout.html.twig') %}

{% block body %}
<div class="login-box">
  <div class="login-logo">
    <b>Es</b>Core
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
        {{ form_start(form, { 'action': path('es_core_reset_password', {'token': token}) }) }}
        {{ form_widget(form) }}
            <div class="row">
                <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">{{'request_new_password'|trans}}</button>
            </div>
            <!-- /.col -->
            </div>
        {{ form_end(form) }}

      <p class="mt-3 mb-1">
        <a href="{{path('es_core_login')}}">{{'return'|trans}}</a>
      </p>

    </div>
    <!-- /.login-card-body -->
  </div>
</div>
{% endblock %}