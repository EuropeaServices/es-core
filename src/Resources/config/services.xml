<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="es_core.es_core" class="ES\CoreBundle\EsCore"  public="true" >
            <argument type="tagged" tag="es_core_word_provider" />
        </service>
        <service id="ES\CoreBundle\EsCore" alias="es_core.es_core" public="true" />

        <service id="es_core.es_core_word_provider" class="ES\CoreBundle\EsCoreWordProvider">
            <tag name="es_core_word_provider" />
        </service>
        <service id="es_core.word_provider" alias="es_core.es_core_word_provider" public="false" />

       <service id="es_core.controller.security_controller" class="ES\CoreBundle\Controller\SecurityController" public="true">
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>